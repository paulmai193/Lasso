<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd

		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx.xsd

		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop.xsd">

	<!-- DAO Layer -->
	<bean id="accountDAO" class="com.lasso.rest.dao.impl.ImplAccountDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="accountRatingDAO" class="com.lasso.rest.dao.impl.ImplAccountRatingDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="bannerDAO" class="com.lasso.rest.dao.impl.ImplBannerDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="categoryDAO" class="com.lasso.rest.dao.impl.ImplCategoryDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="configurationDAO" class="com.lasso.rest.dao.impl.ImplConfigurationDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="countryDAO" class="com.lasso.rest.dao.impl.ImplCountryDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="jobDAO" class="com.lasso.rest.dao.impl.ImplJobDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="jobAccountDAO" class="com.lasso.rest.dao.impl.ImplJobAccountDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="jobStyleDAO" class="com.lasso.rest.dao.impl.ImplJobStyleDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="messageDAO" class="com.lasso.rest.dao.impl.ImplMessageDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="portfolioDAO" class="com.lasso.rest.dao.impl.ImplPortfolioDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="portfolioTypeDAO" class="com.lasso.rest.dao.impl.ImplPortfolioTypeDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="projectDAO" class="com.lasso.rest.dao.impl.ImplProjectDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="promoDAO" class="com.lasso.rest.dao.impl.ImplPromoDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="styleDAO" class="com.lasso.rest.dao.impl.ImplStyleDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="typeDAO" class="com.lasso.rest.dao.impl.ImplTypeDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="typeStyleDAO" class="com.lasso.rest.dao.impl.ImplTypeStyleDAO"
		lazy-init="false" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Service Layer -->
	<bean id="accountManagement" class="com.lasso.rest.service.impl.ImplAccountManagement"
		lazy-init="false" scope="singleton">
		<property name="emailUtil" ref="emailUtil" />
		<property name="accountDAO" ref="accountDAO" />
	</bean>
	<bean id="genericManagement" class="com.lasso.rest.service.impl.ImplGenericManagement"
		lazy-init="false" scope="singleton">
		<property name="countryDAO" ref="countryDAO" />
		<property name="configurationDAO" ref="configurationDAO" />
		<property name="webContextStoragePath" ref="webContextStoragePath" />
	</bean>
	<bean id="uploadImageManagement" class="com.lasso.rest.service.impl.ImplUploadImageManagement"
		lazy-init="false" scope="singleton">
	</bean>
	<bean id="projectManagement" class="com.lasso.rest.service.impl.ImplProjectManagement"
		lazy-init="false" scope="singleton">
		<property name="accountDAO" ref="accountDAO" />
		<property name="bannerDAO" ref="bannerDAO" />
		<property name="categoryDAO" ref="categoryDAO" />
		<property name="jobDAO" ref="jobDAO" />
		<property name="jobAccountDAO" ref="jobAccountDAO" />
		<property name="jobStyleDAO" ref="jobStyleDAO" />
		<property name="messageDAO" ref="messageDAO" />
		<property name="portfolioDAO" ref="portfolioDAO" />
		<property name="portfolioTypeDAO" ref="portfolioTypeDAO" />
		<property name="projectDAO" ref="projectDAO" />
		<property name="styleDAO" ref="styleDAO" />
		<property name="typeDAO" ref="typeDAO" />
		<property name="genericManagement" ref="genericManagement" />
		<property name="jobStoragePath" ref="jobStoragePath" />
		<property name="temporaryStoragePath" ref="temporaryStoragePath" />
		<property name="uploadImageManagement" ref="uploadImageManagement" />
	</bean>
	<bean id="designerManagement" class="com.lasso.rest.service.impl.ImplDesignerManagement"
		lazy-init="false" scope="singleton" parent="projectManagement">
		<property name="portfolioStoragePath" ref="portfolioStoragePath" />
	</bean>
	<bean id="userManagement" class="com.lasso.rest.service.impl.ImplUserManagement"
		lazy-init="false" scope="singleton" parent="projectManagement">
		<property name="accountRatingDAO" ref="accountRatingDAO" />
		<property name="promoDAO" ref="promoDAO" />
	</bean>
	<bean id="messageManagement" class="com.lasso.rest.service.impl.ImplMessageManagement">
		<property name="accountDAO" ref="accountDAO" />
		<property name="jobDAO" ref="jobDAO" />
		<property name="messageDAO" ref="messageDAO" />
		<property name="firebaseApiKey" ref="firebaseApiKey" />
	</bean>

	<!-- Controller Layer -->
	<bean id="accountController" class="com.lasso.rest.controller.AccountController"
		lazy-init="false">
		<property name="accountManagement" ref="accountManagement" />
		<property name="genericManagement" ref="genericManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="httpHost" ref="httpHost" />
		<property name="httpImageHost" ref="httpImageHost" />

	</bean>
	<bean id="uploadController" class="com.lasso.rest.controller.UploadController"
		lazy-init="false">
		<property name="accountManagement" ref="accountManagement" />
		<property name="uploadImageManagement" ref="uploadImageManagement" />
		<property name="genericManagement" ref="genericManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="temporaryStoragePath" ref="temporaryStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>
	<bean id="publicController" class="com.lasso.rest.controller.PublicController"
		lazy-init="false">
		<property name="genericManagement" ref="genericManagement" />
	</bean>
	<bean id="portfolioController" class="com.lasso.rest.controller.PortfolioController"
		lazy-init="false">
		<property name="designerManagement" ref="designerManagement" />
		<property name="portfolioStoragePath" ref="portfolioStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>
	<bean id="browseController" class="com.lasso.rest.controller.BrowseController"
		lazy-init="false">
		<property name="projectManagement" ref="projectManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="bannerStoragePath" ref="bannerStoragePath" />
		<property name="categoryStoragePath" ref="categoryStoragePath" />
		<property name="projectStoragePath" ref="projectStoragePath" />
		<property name="portfolioStoragePath" ref="portfolioStoragePath" />
		<property name="styleStoragePath" ref="styleStoragePath" />
		<property name="typeStoragePath" ref="typeStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>
	<bean id="manageOrderController" class="com.lasso.rest.controller.ManageOrderController"
		lazy-init="false">
		<property name="userManagement" ref="userManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="categoryStoragePath" ref="categoryStoragePath" />
		<property name="jobStoragePath" ref="jobStoragePath" />
		<property name="portfolioStoragePath" ref="portfolioStoragePath" />
		<property name="styleStoragePath" ref="styleStoragePath" />
		<property name="typeStoragePath" ref="typeStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>
	<bean id="manageProjectController" class="com.lasso.rest.controller.ManageProjectController"
		lazy-init="false">
		<property name="designerManagement" ref="designerManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="categoryStoragePath" ref="categoryStoragePath" />
		<property name="jobStoragePath" ref="jobStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>

	<bean id="messageController" class="com.lasso.rest.controller.MessageController"
		lazy-init="false">
		<property name="messageManagement" ref="messageManagement" />
		<property name="userManagement" ref="userManagement" />
		<property name="avatarStoragePath" ref="avatarStoragePath" />
		<property name="jobStoragePath" ref="jobStoragePath" />
		<property name="portfolioStoragePath" ref="portfolioStoragePath" />
		<property name="httpHost" ref="httpImageHost" />
	</bean>

	<!-- Filter Layer -->
	<bean id="accountAuthenticateFilter"
		class="com.lasso.rest.controller.filter.AccountAuthenticateFilter"
		lazy-init="false">
		<property name="accountManagement" ref="accountManagement" />
	</bean>

	<!-- Utility -->
	<bean id="emailUtil" class="com.lasso.util.EmailUtil" init-method="initialized"
		lazy-init="false" scope="prototype">
		<property name="genericManagement" ref="genericManagement" />
	</bean>

</beans>